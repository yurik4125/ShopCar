@model IEnumerable<CarShop.Models.Car>
    @{
        Layout = null;
    }

    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8">
        <title>Maserati</title>
        <link href="/Content/CSS/styles.css" rel="stylesheet" type="text/css" />
        <script src="/Content/JS/jquery-1.11.0.min.js"></script>
        <script src="/Content/JS/scrypts.js"></script>
    </head>
    <body>
        <div id="wrapper">
            <div id="header">
                <img alt="Изображение" src="/Content/images/Header.png" />
            </div>
            <div id="content">
                <div id="nav">
                    <ul>
                        <li><a href="index.html"><img alt="Изображение" src="/Content/images/Logo.jpg" /></a></li>
                        <li><a href="Ghibili.html">Ghibli</a></li>
                        <li><a href="Quattroporte.html">Quattroporte</a></li>
                        <li><a href="GranTurismo.html">GranTurismo</a></li>
                    </ul>
                    <div id="map"><img src="/Content/images/Map.jpg" alt="Map"></div>
                </div>
                <div id="main">
                    <table>
                        <tr>
                            <td id="main_title" colspan="3"><h1>Main page</h1></td>
                        </tr>
                        <tr>
                            <td class="small_card">
                                <img alt="Изображение" src="/Content/images/Ghibli.jpg" />
                                <div class="content">
                                    <small>Бизнес класс</small>
                                    <h2>Ghibli</h2>
                                    <p>Maserati Ghibli III — седан бизнес-класса итальянской компании Maserati, который поступил в продажу во второй половине 2013</p>
                                    <a href="Ghibili.html">GO</a>
                                </div>
                            </td>

                            <td class="small_card">
                                <img alt="Изображение" src="/Content/images/Quatro.jpg" />
                                <div class="content">
                                    <small>Представительский класс</small>
                                    <h2>Quattroporte</h2>
                                    <p>Maserati Quattroporte — спортивный полноразмерный седан класса люкс, которые изготовляются итальянской компанией Maserati с 1963</p>
                                    <a href="Quattroporte.html">GO</a>
                                </div>
                            </td>

                            <td class="small_card">
                                <img alt="Изображение" src="/Content/images/Grand.jpg" />
                                <div class="content">
                                    <small>Купе</small>
                                    <h2>GranTurismo</h2>
                                    <p>Maserati GranTurismo — автомобиль класса Гран Туризмо от итальянского производителя Maserati. Общественности был представлен в марте 2007 года на Женевском автосалоне.</p>
                                    <a href="GranTurismo.html">GO</a>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td class="big_card" colspan="3">
                                <img alt="Изображение" src="/Content/images/Form.png" />
                                <form onsubmit="return false" action="Home/Lid" method="POST">
                                    <fieldset>
                                        <legend>ORDERING</legend>
                                        <input type="text" name="Name" placeholder="Name" required /><br />
                                        <!--Тут ошибка-->
                                        <input type="tel" name="Tel" placeholder="Phone" required patern="8-[0-9]{3}-[0-9]{3}-[0-9]{4}" /><br />
                                        <!--Тут ошибка-->
                                        <select name="Car" required>
                                            <option value="Ghibili">Ghibili</option>
                                            <option value="Quattroporte">Quattroporte</option>
                                            <option value="GranTurismo">GranTurismo</option>
                                        </select><br />
                                        <input type="submit" />
                                    </fieldset>
                                </form>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <div id="footer">Copyrite</div>
        </div>
    </body>
</html>


